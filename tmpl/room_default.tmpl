<head>
	<title>Rooms | RackMonkey</title>
	<style type="text/css" media="all">
	@import "<TMPL_VAR NAME=web_root>/styles/main.css";
	@import "<TMPL_VAR NAME=web_root>/styles/tabs.css";
	@import "<TMPL_VAR NAME=web_root>/styles/itemtable.css";
	</style>
	<style type="text/css" media="print">
	@import "<TMPL_VAR NAME=web_root>/styles/print.css";	
	</style>
	<script type="text/javascript" src="<TMPL_VAR NAME=web_root>/javascript/racklib.js"></script>
	<link rel="icon" href="<TMPL_VAR NAME=web_root>/graphics/favicon.ico" />
</head>
<body>
	<TMPL_INCLUDE NAME="nav-config.ssi">
	<div id="main">
		<table class="itemtable">
			<tr>
				<th colspan="3">
					<a title="Create a new room" onclick="window.location = '<TMPL_VAR NAME=base_url>?view=room&amp;view_type=create'; return false;"><img class="create" src="<TMPL_VAR NAME=web_root>/graphics/icons/add.png" width="14" height="14" alt=""/></a>
					<a title="Sort by name" href="<TMPL_VAR NAME=base_url>?view=room&amp;order_by=room.name">Room</a>
				</th>
				<th><a title="Sort by building" href="<TMPL_VAR NAME=base_url>?view=room&amp;order_by=building.name">Building</a></th>		
				<th><a title="Sort by notes" href="<TMPL_VAR NAME=base_url>?view=room&amp;order_by=room.notes">Notes</a></th>		
			</tr>
			<TMPL_IF NAME=rooms>
			<TMPL_LOOP NAME=rooms>
			<TMPL_IF NAME="__odd__"><tr class="odd"><TMPL_ELSE><tr class="even"></TMPL_IF>
				<td class="item_name">
					<a title="View details for this room" href="<TMPL_VAR NAME=base_url>?view=room&amp;view_type=single&amp;id=<TMPL_VAR NAME=id>"><TMPL_VAR ESCAPE=HTML NAME=name></a>
				</td>
				<td class="item_edit"><a title="Edit room '<TMPL_VAR ESCAPE=HTML NAME=name>'" href="<TMPL_VAR NAME=base_url>?view=room&amp;view_type=edit&amp;id=<TMPL_VAR ESCAPE=URL NAME=id>"><img style="float: left; border: none" src="<TMPL_VAR NAME=web_root>/graphics/icons/pencil.png" width="14" height="14" alt=""/></a></td>
				<td class="item_delete"><a onclick="return confirmDel('<TMPL_VAR ESCAPE=HTML NAME=name>')" title="Delete room '<TMPL_VAR ESCAPE=HTML NAME=name>'" href="<TMPL_VAR NAME=base_url>?view=room&amp;act=delete&amp;act_on=room&amp;act_id=<TMPL_VAR ESCAPE=URL NAME=id>"><img style="float: left; border: none" src="<TMPL_VAR NAME=web_root>/graphics/icons/delete.png" width="14" height="14" alt=""/></a></td>
				<td><TMPL_VAR ESCAPE=HTML NAME=building_name></td>
				<td><TMPL_IF NAME=notes_short><span title="<TMPL_VAR NAME=notes>"><TMPL_VAR NAME=notes_short></span><TMPL_ELSE><TMPL_IF NAME=notes><TMPL_VAR NAME=notes><TMPL_ELSE>-</TMPL_IF></TMPL_IF></td>
			</tr>
			</TMPL_LOOP></TMPL_IF>
			<tr>
				<td colspan="5" class="footer">
					Showing <TMPL_VAR ESCAPE=HTML NAME=listed_room_count> of <TMPL_VAR ESCAPE=HTML NAME=total_room_count> rooms
				</td>
			</tr>
		</table>
	</div>
	<TMPL_INCLUDE NAME="footer.ssi">
</body>
</html>

