<head>
	<title><TMPL_VAR ESCAPE=HTML NAME=name> | RackMonkey</title>
	<style type="text/css" media="all">
	@import "<TMPL_VAR NAME=web_root>/styles/main.css";
	@import "<TMPL_VAR NAME=web_root>/styles/tabs.css";
	@import "<TMPL_VAR NAME=web_root>/styles/form.css";
	</style>
	<style type="text/css" media="print">
	@import "<TMPL_VAR NAME=web_root>/styles/print.css";	
	</style>
	<script type="text/javascript" src="<TMPL_VAR NAME=web_root>/javascript/racklib.js"></script>
	<link rel="icon" href="<TMPL_VAR NAME=web_root>/graphics/favicon.ico" />
</head>
<body>
	<TMPL_INCLUDE NAME="nav-app.ssi">
	<div id="main">
		<table class="form">
			<tr>
				<th>
					<button style="float: right; margin-top: -2px" title="View all apps" onclick="window.location = '<TMPL_VAR NAME=base_url>?view=app&amp;view_type=default'; return false;">View All</button>
					<button style="float: right; margin-right: 4px; margin-top: -2px" title="Create a new app" onclick="window.location = '<TMPL_VAR NAME=base_url>?view=app&amp;view_type=create'; return false;">New App</button>
					<span class="title">Apps</span>
				</th>
			</tr>
			<tr>
				<td>
					<div>
						<div class="key">Name</div>
						<div class="value"><TMPL_VAR ESCAPE=HTML NAME=name></div>
					</div>
					<div>
						<div class="key">Description</div>
						<div class="value"><TMPL_IF NAME=descript><TMPL_VAR ESCAPE=HTML NAME=descript><TMPL_ELSE>&nbsp;-</TMPL_IF></div>
					</div>
					<div>
						<div class="key">Devices Used <a title="Create a new association between this app and a device" onclick="window.location = '<TMPL_VAR NAME=base_url>?view=deviceApp&amp;view_type=create&amp;id=<TMPL_VAR ESCAPE=HTML NAME=id>'; return false;"><img class="create" src="<TMPL_VAR NAME=web_root>/graphics/icons/add.png" width="14" height="14" alt=""/></a></div>
						<div class="value">
							<TMPL_IF NAME=app_devices>
							<ul style="margin-top: 0px; padding-left: 1.5em">
								<TMPL_LOOP NAME=app_devices>
								<li>
								  <TMPL_VAR ESCAPE=HTML NAME=name> <TMPL_VAR ESCAPE=HTML NAME=app_relation_name> <a title="View details for this device" href="<TMPL_VAR NAME=base_url>?view=device&amp;view_type=single&amp;id=<TMPL_VAR ESCAPE=URL NAME=device_id>"><TMPL_VAR ESCAPE=HTML NAME=device_name><TMPL_UNLESS NAME=domain_meta_default_data>.<TMPL_VAR ESCAPE=HTML NAME=domain_name></TMPL_UNLESS></a> 
								  <a onclick="return confirmDel('this association between <TMPL_VAR ESCAPE=HTML NAME=name> and <TMPL_VAR ESCAPE=HTML NAME=device_name>')" title="Delete this association between <TMPL_VAR ESCAPE=HTML NAME=name> and <TMPL_VAR ESCAPE=HTML NAME=device_name>" href="<TMPL_VAR NAME=base_url>?view=app&amp;view_type=single&amp;id=<TMPL_VAR ESCAPE=URL NAME=id>&amp;act=delete&amp;act_on=deviceApp&amp;act_id=<TMPL_VAR ESCAPE=HTML NAME=device_app_id>"><img style="border: none" src="<TMPL_VAR NAME=web_root>/graphics/icons/delete.png" width="14" height="14" alt=""/></a>
								</li>
								</TMPL_LOOP>
							</ul>
							<TMPL_ELSE><em>This app does not use any devices.</em>
							</TMPL_IF>
						</div>
					</div><TMPL_IF NAME=notes>
					<hr />
					<div>
						<div class="key">Notes</div>
						<div class="value"><TMPL_VAR NAME=notes></div>
					</div></TMPL_IF>
				</td>
			</tr>
			<tr>
				<td class="footer">		
					<TMPL_UNLESS NAME=meta_default_data><button style="float: left" title="Delete this app" onclick="if (confirmDel('<TMPL_VAR ESCAPE=HTML NAME=name> and its connections to devices')) { window.location = '<TMPL_VAR NAME=base_url>?view=app&amp;view_type=default&amp;act=delete&amp;act_on=app&amp;act_id=<TMPL_VAR ESCAPE=URL NAME=id>'; return false; }">Delete</button></TMPL_UNLESS>
					<button style="float: right" title="Edit this app" onclick="window.location = '<TMPL_VAR NAME=base_url>?view=app&amp;view_type=edit&amp;id=<TMPL_VAR ESCAPE=URL NAME=id>&amp;return_view_type=<TMPL_VAR ESCAPE=HTML NAME=view_type>&amp;return_view_id=<TMPL_VAR ESCAPE=HTML NAME=id>'; return false;">Edit</button>	
					<span class="updated">Entry last updated by <TMPL_VAR ESCAPE=HTML NAME=meta_update_user> at <TMPL_VAR ESCAPE=HTML NAME=meta_update_time> GMT</span>
				</td>
			</tr>
		</table>
	</div>
	<TMPL_INCLUDE NAME="footer.ssi">
</body>
</html>
